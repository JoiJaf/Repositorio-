<!DOCTYPE html>
<html lang="en" class="img position-relative">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelesBeachProyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelesBeachProyecto.styles.css" asp-append-version="true" />

    
</head>


<body>
    <div class="d-block ">
       
        <img src="@Url.Content("~/css/fondo.png")"
             class="position-absolute top-0 start-0 w-100 h-100"
             style="z-index: -1; object-fit: cover;"
             alt="fondo" />
        <header>
            <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light box-shadow mb-3 flex-row justify-content-center">
                <div class="d-flex gap-xl-5">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="@Url.Content("~/css/logo.png")" alt="Alternate Text" />
                    </a>
                    <button class="navbar-toggler h-25" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse  justify-content-between">
                        <ul class="navbar-nav flex-grow-1 ">
                            <li class="nav-item mx-2">
                                <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Reservas" asp-action="Create">Reservas</a>
                            </li>

                            <li class="nav-item mx-2">
                                <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Paquetes" asp-action="Index">Paquetes</a>
                            </li>

                            <ul class="navbar-nav">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (User.HasClaim(c => c.Type == "IsAdmin" && c.Value == "True"))
                                    {
                                        <div class="dropdown justify-content-center align-content-center">
                                            <button class="shadow-none btn dropdown-toggle fw-bold text-white border-0" type="button" id="dropdownMenuButton" aria-expanded="false">
                                                Panel administrador
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li>
                                                    <a class="dropdown-item text-black" asp-controller="GestionarPaquetes" asp-action="Index">Gestionar paquetes</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-black" asp-controller="GestionarUsuarios" asp-action="Index">Gestionar usuarios</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-black" asp-controller="GestionarReservas" asp-action="Index">Gestionar reservas</a>
                                                </li>
                                            </ul>
                                        </div>

                                        <style>
                                            .dropdown:hover .dropdown-menu {
                                                display: block;
                                            }

                                            .dropdown-menu {
                                                display: none;
                                            }
                                        </style>
                                    }

                                    <div class="dropdown justify-content-center align-content-center">
                                        <button class="btn shadow-none dropdown-toggle fw-bold text-white" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            Hola @User.Identity.Name
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li class="nav-item">
                                                <a class="dropdown-item text-black" asp-area="" asp-controller="Usuarios" asp-action="Logout">Cerrar sesión</a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <li class="nav-item mx-2">
                                        <a class="nav-link fw-bold text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sesion</a>
                                    </li>
                                }

                            </ul>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="position-relative">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container-fluid text-center text-black">
            &copy; 2024 - HotelesBeachProyecto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
