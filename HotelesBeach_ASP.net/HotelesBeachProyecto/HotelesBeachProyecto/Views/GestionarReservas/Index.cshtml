@model IEnumerable<HotelesBeachProyecto.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<div class="container">
    <div class="d-flex flex-column align-items-start mb-3">
        <h1 class="mb-0">Reservas</h1>
    </div>

    <div class="table-responsive " style="max-height: 400px; overflow-y: auto;">
        <table class="table table-striped table-bordered text-center bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Cliente</th>
                    <th>Personas</th>
                    <th>Noches</th>
                    <th>@Html.DisplayNameFor(model => model.Paquete)</th>
                    <th>@Html.DisplayNameFor(model => model.Descuento)</th>
                    <th>Monto Rebajado</th>
                    <th>Monto Final</th>
                    <th>Forma de Pago</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.NombreCompleto)</td>
                        <td>@Html.DisplayFor(modelItem => item.CantidadPersonas)</td>
                        <td>@Html.DisplayFor(modelItem => item.CantidadNoches)</td>
                        <td>@Html.DisplayFor(modelItem => item.Paquete.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descuento)%</td>
                        <td>@Html.DisplayFor(modelItem => item.MontoRebajado)</td>
                        <td>@Html.DisplayFor(modelItem => item.MontoFinal)</td>
                        <td>@Html.DisplayFor(modelItem => item.FormaPago.Nombre)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
