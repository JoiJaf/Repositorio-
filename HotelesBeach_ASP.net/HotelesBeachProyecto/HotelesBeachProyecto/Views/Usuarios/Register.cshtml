@model HotelesBeachProyecto.Models.Usuario

@{
    ViewData["Title"] = "Register";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        <strong>@TempData["Mensaje"]</strong>
    </div>}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4" style="width: 30rem;">
        <div class="text-center">
            <h3>Crear una cuenta</h3>
        </div>
        <form asp-action="Register" id="FormRegister">
            @Html.AntiForgeryToken()
            <div class="form-group mt-3">
                <label for="Cedula">Identificación</label>
                <input class="form-control" id="cedula" name="cedula" placeholder="Identificación" required />
            </div>
            <div class="form-group mt-3">
                <label for="Telefono">Teléfono</label>
                <input class="form-control" id="telefono" name="telefono" placeholder="Teléfono" required />
            </div>
            <div class="form-group mt-3">
                <label for="Direccion">Domicilio</label>
                <input class="form-control" id="direccion" name="direccion" placeholder="Domicilio" required />
            </div>
            <div class="form-group mt-3">
                <label for="email">Correo</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Correo" required />
            </div>
            <div class="form-group mt-3">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required />
            </div>
            <div class="form-group mt-3">
                <label for="confirmarPassword">Contraseña</label>
                <input type="password" class="form-control" id="confirmarPassword" name="confirmarPassword" placeholder="Confirmar contraseña" required />
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger mt-2">@ViewBag.Error</div>
            }
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning w-100">Crear cuenta</button>
            </div>
            <div class="text-center mt-2">
                <small>¿Ya tienes cuenta? <a href="/Usuarios/Login">Inicia sesión</a></small>
            </div>
        </form>
    </div>
</div>

