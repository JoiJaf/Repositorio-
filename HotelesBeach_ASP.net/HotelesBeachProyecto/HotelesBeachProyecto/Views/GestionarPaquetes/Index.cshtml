@model IEnumerable<HotelesBeachProyecto.Models.Paquete>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column align-items-center">
    <div class="d-flex w-75 justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Paquetes</h1>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
    </div>

    <table class="table table-striped table-bordered w-75 text-center bg-white">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Costo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prima)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mensualidades)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prima)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mensualidades)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
